# Database Configuration
DB_CONNECTION=sqlite
DB_HOST=
DB_PORT=
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Warden Primary Key Type
# Controls the column type for primary keys on Warden tables (abilities, roles, etc.)
# Options: id, ulid, uuid
WARDEN_PRIMARY_KEY_TYPE=id

# Warden Polymorphic Morph Types
# Controls the column type for polymorphic relationship foreign keys
# IMPORTANT: When using ulid/uuid primary keys, set these to matching morph types
# Options: morph, ulidMorph, uuidMorph
WARDEN_ACTOR_MORPH_TYPE=morph
WARDEN_CONTEXT_MORPH_TYPE=morph
WARDEN_SUBJECT_MORPH_TYPE=morph

# Examples:
# For ULID primary keys:
#   WARDEN_PRIMARY_KEY_TYPE=ulid
#   WARDEN_ACTOR_MORPH_TYPE=ulidMorph
#   WARDEN_CONTEXT_MORPH_TYPE=ulidMorph
#   WARDEN_SUBJECT_MORPH_TYPE=ulidMorph
#
# For UUID primary keys:
#   WARDEN_PRIMARY_KEY_TYPE=uuid
#   WARDEN_ACTOR_MORPH_TYPE=uuidMorph
#   WARDEN_CONTEXT_MORPH_TYPE=uuidMorph
#   WARDEN_SUBJECT_MORPH_TYPE=uuidMorph

# XDebug (Docker)
XDEBUG_MODE=develop,debug
HOST_IP=host.docker.internal
IDE_KEY=PHPSTORM
XDEBUG_PORT=9003
